<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	<hibernate-mapping>
		<class name="cn.itcast.ssh.domain.Person">
			<id name="Pid" column="pid" length="20" type="java.lang.Long">
				<generator class="increment"></generator>
			</id> 
		
			<property name="pname" column="pname" length="20" type="java.lang.String"></property>
			<property name="psex" column="psex" length="20" type="java.lang.String"></property>
		</class>
	
	
	</hibernate-mapping>